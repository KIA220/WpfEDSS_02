<Page x:Class="WpfEDSS.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfEDSS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1920"
      Title="HomePage">

    <Grid>
        <StackPanel>
        <TextBlock Text="Список процессов(id.id_comment.id_qr_code.id_user.id_report.id_client)"/>
            <ListView x:Name="listOfProcesses" Margin="10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <TextBlock Text="{Binding id}"/>
                            <TextBlock Text="{Binding id_comment}"/>
                            <TextBlock Text="{Binding id_qr_code}"/>
                            <TextBlock Text="{Binding id_user}"/>
                            <TextBlock Text="{Binding id_report}"/>
                            <TextBlock Text="{Binding id_client}"/>
                            <Button Content="Редактировать" Name="btnEditProcess" Click="btnEditProcess_Click"/>
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
