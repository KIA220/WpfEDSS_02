<Page x:Class="WpfEDSS.Pages.Help"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfEDSS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1920"
      Title="Help">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1"
                Grid.Row="2" Content="Welcome to the help page!" HorizontalAlignment="Center" FontSize="28" Foreground="Black" VerticalAlignment="Center"/>
        <Button Grid.Column="1"
                Grid.Row="4"
                x:Name="BtnHelpBack"
                Click="BtnHelpBack_Click"
                >Назад</Button>
        <Label Grid.Column="2"
                Grid.Row="5"
               Content="Dev-KIA-IFST41-BITI"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               FontSize="16"/>
    </Grid>
    
</Page>
