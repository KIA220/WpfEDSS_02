<Page x:Class="WpfEDSS.Pages.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfEDSS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1920"
      Title="ClientsPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Список клиентов"/>
            <TextBox Width="600" Height="40" HorizontalAlignment="Left" Text="Поиск" FontSize="28" Foreground="Gray"/>
            <ListView x:Name="listOfClients" Margin="10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <TextBlock Text="{Binding id_client}"/>
                            <TextBlock Text="{Binding fio_client}"/>
                            <TextBlock Text="{Binding tel_client}"/>
                            <Button Content="Редактировать" Name="btnEditClient" Click="btnEditClient_Click"/>
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
